<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ pageTitle }}</title>
    <link rel = "icon" href ="https://cdn-icons-png.flaticon.com/512/831/831311.png?w=740">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css" type="text/css" >

    <style>
        {{ source('styles.css') }}
    </style>

</head>
<body>

    <header>
        <div class="container">
            <div class="row middle-xs">
                <div class="col-xs-2">
                    <a href="http://localhost:8080">
                        <img class="logo" src="https://cdn-icons-png.flaticon.com/512/831/831311.png?w=740" alt="logo">
                    </a>
                </div>

                <div class="col-xs-10">

                    <div class="row">
                        <div class="col-xs-12">
                            <nav class="nav">
                                <a href="http://localhost:8080/bizness" class="nav_item">
                                    Bizness
                                </a>

                                <a href="http://localhost:8080/sports" class="nav_item">
                                    Sports
                                </a>

                                <a href="http://localhost:8080/izklaide" class="nav_item">
                                    Izklaide
                                </a>

                                <a href="http://localhost:8080/tehnologijas" class="nav_item">
                                    Tehnoloģijas
                                </a>

                                <a href="http://localhost:8080/par-mums" class="nav_item">
                                    Par mums
                                </a>

                                <a href="http://localhost:8080/kontakti" class="nav_item">
                                    Kontakti
                                </a>

                                <a href="http://localhost:8080/lietotaja-raksti/pievieno-rakstu" class="nav_item">
                                    Pievieno rakstu
                                </a>

                                <a href="http://localhost:8080/lietotaja-raksti" class="nav_item">
                                    Lietotāju raksti
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section>
        <div class="container">
            <div class="row">
                {% for key, article in newsArticles %}
                    {% if key % 2 == 0 %}
                        <div class="col-xs-6">
                            <div class="article_data">
                                <a class="image-link" href="{{ article.getUrl }}" target="_blank">
                                    <img src="{{ article.getImageUrl }}" alt="alternate">
                                </a>
                                <div class="title">
                                    <a href="{{ article.getUrl }}" target="_blank">{{ article.getTitle }}</a>
                                </div>
                            </div>
                            <br><br>
                        </div>
                    {% else %}
                        <div class="col-xs-6">
                            <div class="article_data">
                                <a class="image-link" href="{{ article.getUrl }}" target="_blank">
                                    <img src="{{ article.getImageUrl }}" alt="alternate">
                                </a>
                                <div class="title">
                                    <a href="{{ article.getUrl }}" target="_blank">{{ article.getTitle }}</a>
                                </div>
                            </div>
                            <br><br>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row center-xs">
                <div class="col-xs-12">
                    <div class="footer">
                        <span class="footer__item">AS ZIŅAS</span>
                        <span class="footer__item">Piemēra iela 4-8, Rīga, LV-1004</span>
                        <span class="footer__item">+371 12345678</span>
                        <span class="footer__item">piemers@zinas.lv</span>
                    </div>

                    <div class="copyright">
                        <div class="container">
                            <div class="row center-xs">
                                <div class="col-xs-12">
                                    <span class="copyright_desc">Izstrādāja: Jānis Šņoriņš</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </footer>


</body>
</html>