<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ pageTitle }}</title>
    <link rel = "icon" href ="https://cdn-icons-png.flaticon.com/512/831/831311.png?w=740">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flexboxgrid/6.3.1/flexboxgrid.min.css" type="text/css" >

    <style>
        {{ source('styles.css') }}

        .form-container {
            padding: 100px 0;
        }

        .form {
            font-size: 15px;
            padding: 10px;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 30px;
            box-shadow: rgba(0, 0, 0, 0.1) 0 4px 12px;
            border: 0;
            border-radius: 15px;
        }

        .form:hover {
            transform: scale(1.01);
        }

        .form-container {
            margin: auto;
        }

        .submit-button {
            background: #900C3F;
            color: white;
            width: 100%;
            padding: 10px;
            font-weight: bold;
            font-size: 18px;
            border-radius: 15px;
            border: 0;
            box-shadow: rgba(0, 0, 0, 0.3) 0 4px 12px;
        }

        .submit-button:hover {
            opacity: 0.85;
            cursor: pointer;
        }

        .description-form {
            resize: vertical;
            font-family: sans-serif;
            height: 250px;
        }

        label {
            cursor: default;
            font-weight: bold;
        }

        .category-container {
            padding-bottom: 50px;
        }

        .submit-button-category {
            margin-top: 10px;
        }

    </style>

</head>
<body>

<header>
    <div class="container">
        <div class="row middle-xs">
            <div class="col-xs-2">
                <a href="http://localhost:8080">
                    <img class="logo" src="https://cdn-icons-png.flaticon.com/512/831/831311.png?w=740" alt="logo">
                </a>
            </div>

            <div class="col-xs-10">

                <div class="row">
                    <div class="col-xs-12">
                        <nav class="nav">
                            <a href="http://localhost:8080/bizness" class="nav_item">
                                Bizness
                            </a>

                            <a href="http://localhost:8080/sports" class="nav_item">
                                Sports
                            </a>

                            <a href="http://localhost:8080/izklaide" class="nav_item">
                                Izklaide
                            </a>

                            <a href="http://localhost:8080/tehnologijas" class="nav_item">
                                Tehnoloģijas
                            </a>

                            <a href="http://localhost:8080/par-mums" class="nav_item">
                                Par mums
                            </a>

                            <a href="http://localhost:8080/kontakti" class="nav_item">
                                Kontakti
                            </a>

                            <a href="http://localhost:8080/lietotaja-raksti/add" class="nav_item">
                                Pievieno rakstu
                            </a>

                            <a href="http://localhost:8080/lietotaja-raksti" class="nav_item">
                                Lietotāju raksti
                            </a>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<section>
    <div class="container">
        <div class="form-container">
            <form method="post" action="{{ postAction }}">
                <label>
                    Virsraksts
                    <input class="form form-title" type="text" name="title"/>
                </label>
                <label>
                    Apraksts
                    <textarea class="form description-form" name="description"></textarea>
                </label>
                <label>
                    Saite
                    <input class="form form-url" type="text" name="url">
                </label>
                <label>
                    Attēla saite
                    <input class="form form-img-url" type="text" name="img-url"/>
                </label>
                <button type="submit" class="submit-button">
                    Pievieno rakstu
                </button>
            </form>
        </div>
    </div>
</section>

<footer>
    <div class="container">
        <div class="row center-xs">
            <div class="col-xs-12">
                <div class="footer">
                    <span class="footer__item">AS ZIŅAS</span>
                    <span class="footer__item">Piemēra iela 4-8, Rīga, LV-1004</span>
                    <span class="footer__item">+371 12345678</span>
                    <span class="footer__item">piemers@zinas.lv</span>
                </div>

                <div class="copyright">
                    <div class="container">
                        <div class="row center-xs">
                            <div class="col-xs-12">
                                <span class="copyright_desc">Izstrādāja: Jānis Šņoriņš</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</footer>


</body>
</html>